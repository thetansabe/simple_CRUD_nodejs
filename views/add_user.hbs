<div class="add_form container">
    <a href="/" class="btn btn-link">Quay lai</a>
    <h1>Them user</h1>

    <form action="/users/add" method="post">
        
        <div class="form-group">
            <label for="">Name: </label>
            <input type="text" name="name" id="name" placeholder="Nhap name" class="form-control">
            <span class="text-danger name_wrong-format"></span>
        </div>

        <div class="form-group">
            <label for="">Age: </label>
            <input type="text" name="age" id="age" placeholder="Nhap age" class="form-control">
            <span class="text-danger age_wrong-format"></span>
        </div>

        <div class="form-group">
            <label for="">Email: </label>
            <input type="text" name="email" id="email" placeholder="Nhap email" class="form-control">
            <span class="text-danger email_wrong-format"></span>
        </div>

        <div class="form-group">
            <label for="">Gender: </label>
            <select class="form-select form-control" name="gender" id="gender">
                <option selected disabled>Choose your gender</option>
                <option value="male">Male</option>
                <option value="female">Female</option>
            </select>
        </div>

        <button class="btn btn-success" type="submit">Them user</button>
    </form>
      
</div>
